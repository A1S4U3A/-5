<Window x:Class="ПР5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="String Array App" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox x:Name="listBoxStrings" Margin="0,0,0,10" FontSize="16" />

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left">
            <TextBox x:Name="textBoxInput" Width="300" Margin="0,0,10,0" FontSize="16" />
            <Button Content="Добавить" Width="80" Click="AddButton_Click" FontSize="16" />
            <Button Content="Удалить" Width="80" Click="RemoveButton_Click" FontSize="16" Margin="5,0,0,0"/>
            <Button Content="Изменить" Width="80" Click="EditButton_Click" FontSize="16" />
        </StackPanel>
    </Grid>
</Window>
